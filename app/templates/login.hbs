
{{outlet}}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="login-title"><center>Sign in to continue to Rapidcash</center></h1>
            <div class="account-wall">
                <img class="profile-img" src="/assets/Image/rapid.png" alt="">
                <form class="form-signin">
                

              <label class="col-sm-2 control-label" for="name">Email :</label><br>
              {{input type="text"  class="form-control"  placeholder="email" value=email}}<br><br>
                
              <label class="col-sm-2 control-label" for="name">Password : </label><br>  
              {{input type="password"  class="form-control"  placeholder="password" value=password}}<br><br>                               

              <button class="btn btn-lg btn-primary btn-block" style="margin-right:3px" {{action "Submit"}}> SIGN IN</button>
                </form>
            </div>
        </div>
    </div>
</div>